<div class="contact-page">
  <div class="wrap">
    <header role="banner" class="collection-header">
        <h1>{{page.title}}</h1>
    </header>

    <div class="grid">
      <div class="grid__item medium-up--one-third one-whole">
        <img src="{{ 'hello.svg' | asset_url }}" alt="illustration of bigfoot with a racoon in woods" title="HELLOOOOOOOOO OUT THERE" class="page-hero"/>
        <h2>Say hello!</h2>
        <p>{{page.metafields.info.contact_hello}}</p>
      </div>
      <div class="grid__item medium-up--one-third one-whole">
        <img src="{{ 'buzz.svg' | asset_url }}" alt="illustration of cat trimming topiary" title="feelin' myself" class="page-hero"/>
        <h2>Press</h2>
        <p>{{page.metafields.info.contact_press}}</p>
      </div>
      <div class="grid__item medium-up--one-third one-whole">
        <img src="{{ 'wholesale.svg' | asset_url }}" alt="illustration snake and cat working out with weights" title="let's do this" class="page-hero"/>
        <h2>Wholesale</h2>
        <p>{{page.metafields.info.contact_wholesale}}</p>
      </div>
    </div>
  </div>
</div>
