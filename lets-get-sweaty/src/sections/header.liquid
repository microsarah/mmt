<style>
  {% if section.settings.logo != blank %}
    .site-header__logo-image {
      max-width: {{ section.settings.logo_max_width }}px;
    }
  {% endif %}
</style>

<div class="shop-announcement">
  <p>{{ shop.metafields.shop_announcement.shop_announcement }}</p>
</div>

<div data-section-id="{{ section.id }}" data-section-type="header-section">
  <header role="banner" class="site-header">
    <div class="menu-mobile-wrap grid clearfix">
      <label for="menu-mobile-checkbox" class="menu-mobile-label">MENU</label>
      <input type="checkbox" id="menu-mobile-checkbox">
      <div class="menu wrap clearfix">
        <nav role="navigation" class="site-navigation">
          <ul class="site-nav clearfix">
            {% for link in linklists[section.settings.main_linklist].links %}
              {%- assign child_list_handle = link.title | handleize -%}
              {% if menus[child_list_handle].links != blank %}
                <li class="site-nav--has-submenu{% if link.active %} site-nav--active{% endif %}">
                  <a href="{{ link.url }}" class="site-nav__link">
                    {{ link.title }}
                    {% include 'icon-arrow-down' %}
                  </a>
                  <ul class="site-nav__submenu">
                    {% for childlink in menus[child_list_handle].links %}
                      <li {% if childlink.active %}class="site-nav--active"{% endif %}>
                        <a href="{{ childlink.url }}" class="site-nav__link">{{ childlink.title | escape }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li {% if link.active %}class="site-nav--active"{% endif %}>
                  <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </nav>
        <nav class="top-navigation">
          <ul class="top-nav clearfix">
            {% if shop.customer_accounts_enabled %}
                {% if customer %}
                  <li>
                    {% if customer.first_name != blank %}
                      {% capture first_name %}<a href="/account">{{ customer.first_name }}</a>{% endcapture %}
                      {{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }}
                    {% else %}
                      <a href="/account"> {{ 'layout.customer.account' | t }}</a>
                    {% endif %}
                  </li>
                {% else %}
                  <li>
                    {{ 'layout.customer.log_in' | t | customer_login_link }}
                  </li>
                {% endif %}
              <li class="cart-icon">
                <a href="/cart">
                  {% include 'icon-cart' %}
                  <span class="cart-item-count">{{ cart.item_count }}</span>
                </a>
              </li>
              <li class="searchbar">
                <form action="/search" method="get" role="search">
                  <label for="Search" class="label-hidden">
                    {{ 'general.search.placeholder' | t }}
                  </label>
                  <div class="icon-search">{% include 'icon-search' %}</div>
                  <input type="search"
                         name="q"
                         id="Search"
                         placeholder="{{ 'general.search.placeholder' | t }}"
                         class="search-input">
                </form>
              </li>
            </ul>
          {% endif %}
        </nav>
      </div>
    </div>


    <div class="logo">
      {% if template.name == 'index' %}
        <h1 itemscope itemtype="http://schema.org/Organization" class="h1-logo">
      {% else %}
        <div class="h1" itemscope itemtype="http://schema.org/Organization">
      {% endif %}
          <a class="logo-svg" href="/" itemprop="url" class="site-logo">
              {{ 'logo.svg' | asset_url | img_tag }}
          </a>
      {% if template.name == 'index' %}
        </h1>
      {% else %}
        </div>
      {% endif %}
    </div>
  </header>
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 450,
        "step": 10,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}
